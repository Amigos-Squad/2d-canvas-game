{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "scss/*": ["src/styles/*"],
      "assets/*": ["src/assets/*"]
    },
    "typeRoots": ["./@types", "node_modules/@types"]
  },
  "include": ["src", "server", "@types/**/*.d.ts", "./node_modules/@types"]
}
